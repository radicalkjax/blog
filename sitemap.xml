---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {% assign pages = site.pages | where_exp: "page", "page.url != '/404.html'" %}
  {% assign posts = site.posts %}
  
  <!-- Home Page for all languages -->
  {% for lang in site.languages %}
  <url>
    <loc>{{ site.url }}{% if lang != site.default_lang %}/{{ lang }}{% endif %}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
    {% for alt_lang in site.languages %}
    <xhtml:link rel="alternate" hreflang="{{ alt_lang }}" 
                href="{{ site.url }}{% if alt_lang != site.default_lang %}/{{ alt_lang }}{% endif %}/" />
    {% endfor %}
    <xhtml:link rel="alternate" hreflang="x-default" href="{{ site.url }}/" />
  </url>
  {% endfor %}
  
  <!-- Static Pages for all languages -->
  {% for page in pages %}
    {% unless page.url contains '.xml' or page.url contains '.txt' or page.url contains '.json' %}
      {% for lang in site.languages %}
      <url>
        <loc>{{ site.url }}{% if lang != site.default_lang %}/{{ lang }}{% endif %}{{ page.url }}</loc>
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        <changefreq>{% if page.changefreq %}{{ page.changefreq }}{% else %}monthly{% endif %}</changefreq>
        <priority>{% if page.priority %}{{ page.priority }}{% else %}0.7{% endif %}</priority>
        {% for alt_lang in site.languages %}
        <xhtml:link rel="alternate" hreflang="{{ alt_lang }}" 
                    href="{{ site.url }}{% if alt_lang != site.default_lang %}/{{ alt_lang }}{% endif %}{{ page.url }}" />
        {% endfor %}
        <xhtml:link rel="alternate" hreflang="x-default" href="{{ site.url }}{{ page.url }}" />
      </url>
      {% endfor %}
    {% endunless %}
  {% endfor %}
  
  <!-- Blog Posts for all languages -->
  {% for lang in site.languages %}
    {% assign lang_posts = site.posts | where: "lang", lang %}
    {% if lang_posts.size == 0 and lang == site.default_lang %}
      {% assign lang_posts = site.posts %}
    {% endif %}
    
    {% for post in lang_posts %}
    <url>
      <loc>{{ site.url }}{% if lang != site.default_lang %}/{{ lang }}{% endif %}{{ post.url }}</loc>
      <lastmod>{% if post.last_modified_at %}{{ post.last_modified_at | date_to_xmlschema }}{% else %}{{ post.date | date_to_xmlschema }}{% endif %}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.8</priority>
      {% for alt_lang in site.languages %}
      <xhtml:link rel="alternate" hreflang="{{ alt_lang }}" 
                  href="{{ site.url }}{% if alt_lang != site.default_lang %}/{{ alt_lang }}{% endif %}{{ post.url }}" />
      {% endfor %}
      <xhtml:link rel="alternate" hreflang="x-default" href="{{ site.url }}{{ post.url }}" />
    </url>
    {% endfor %}
  {% endfor %}
</urlset>