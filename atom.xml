---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title type="text">{{ site.title | xml_escape }}</title>
  <subtitle type="text">{{ site.description | xml_escape }}</subtitle>
  <id>{{ site.url }}{{ site.baseurl }}/</id>
  <link href="{{ "/atom.xml" | absolute_url }}" rel="self" type="application/atom+xml"/>
  <link href="{{ site.url }}{{ site.baseurl }}/" rel="alternate" type="text/html"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <author>
    <name>{{ site.author.name | default: "Kali Jackson" }}</name>
    {% if site.email %}
    <email>{{ site.email }}</email>
    {% endif %}
    {% if site.author.uri %}
    <uri>{{ site.author.uri }}</uri>
    {% endif %}
  </author>
  <generator uri="https://jekyllrb.com/" version="{{ jekyll.version }}">Jekyll</generator>
  <rights>Â© {{ site.time | date: '%Y' }} {{ site.author.name | default: "Kali Jackson" }}</rights>
  <icon>{{ "/assets/images/logo/sitelogo.png" | absolute_url }}</icon>
  <logo>{{ "/assets/images/logo/sitelogo.png" | absolute_url }}</logo>
  
  {% for post in site.posts limit:20 %}
  <entry>
    <title type="text">{{ post.title | xml_escape }}</title>
    <link href="{{ post.url | absolute_url }}" rel="alternate" type="text/html" title="{{ post.title | xml_escape }}"/>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.modified | default: post.date | date_to_xmlschema }}</updated>
    <id>{{ post.url | absolute_url }}</id>
    
    <author>
      <name>{{ post.author | default: site.author.name | default: "Kali Jackson" }}</name>
    </author>
    
    <summary type="html">
      {% if post.excerpt %}
        {{ post.excerpt | strip_html | xml_escape | truncatewords: 50 }}
      {% else %}
        {{ post.content | strip_html | xml_escape | truncatewords: 50 }}
      {% endif %}
    </summary>
    
    <content type="html" xml:base="{{ post.url | absolute_url }}">
      <![CDATA[
        {{ post.content }}
      ]]>
    </content>
    
    {% for tag in post.tags %}
    <category term="{{ tag | xml_escape }}" label="{{ tag | xml_escape }}"/>
    {% endfor %}
    
    {% for category in post.categories %}
    <category term="{{ category | xml_escape }}" label="{{ category | xml_escape }}"/>
    {% endfor %}
  </entry>
  {% endfor %}
</feed>