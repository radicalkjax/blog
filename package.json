{
  "name": "jekyll-theme-globalized",
  "version": "1.0.0",
  "description": "A modern, internationalized Jekyll theme with professional-grade features",
  "private": true,
  "scripts": {
    "start": "bundle exec jekyll serve --host 0.0.0.0 --port 4000",
    "build": "bundle exec jekyll build",
    "build:prod": "JEKYLL_ENV=production bundle exec jekyll build",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint assets/js --ext .js --fix",
    "lint:css": "stylelint 'assets/css/**/*.css' --fix",
    "format": "prettier --write '**/*.{js,css,md,yml,json}'",
    "validate:html": "html-validate '_site/**/*.html'",
    "validate:css": "css-validator assets/css/*.css",
    "lighthouse": "lighthouse http://localhost:4000 --output=json --output-path=./lighthouse-report.json",
    "analyze": "webpack-bundle-analyzer",
    "security": "npm audit && bundle audit",
    "clean": "rm -rf _site .jekyll-cache .sass-cache",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radicalkjax/blog.git"
  },
  "keywords": [
    "jekyll",
    "theme",
    "internationalization",
    "i18n",
    "pwa",
    "web-components",
    "modern-css",
    "responsive",
    "accessible"
  ],
  "author": "Kali Jackson <kali@radicalkjax.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/radicalkjax/blog/issues"
  },
  "homepage": "https://radicalkjax.com",
  "devDependencies": {
    "@axe-core/cli": "^4.8.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@playwright/test": "^1.40.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "html-validate": "^8.7.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lighthouse": "^11.4.0",
    "lint-staged": "^15.2.0",
    "pa11y": "^6.2.3",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.1.0",
    "purgecss": "^7.0.2",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^35.0.0",
    "terser": "^5.43.1",
    "webpack-bundle-analyzer": "^4.10.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{md,yml,json}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/**/*.test.js",
      "!assets/js/vendor/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "express": "^5.1.0"
  }
}
